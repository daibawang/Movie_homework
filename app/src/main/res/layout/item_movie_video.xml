<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/it_video_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vd_img_border"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="7dp"
            android:background="@color/white"
            android:layout_width="125dp"
            android:layout_height="70dp" />
        <com.bcu.dai.movie_homework.View.ASmartimgView
            android:id="@+id/vd_img"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/video"
            android:layout_width="120dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/vd_timelong"
            android:layout_marginBottom="32dp"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:text="00:12" />
    </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/vd_name"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:text="预告片名字"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/vd_type"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="left"
                android:layout_marginRight="40dp"
                android:textSize="12dp"
                android:text="预告片"
                android:textColor="@color/vd_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



</LinearLayout>