<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true"
    >
<RelativeLayout
    android:id="@+id/click"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <com.bcu.dai.movie_homework.View.ASmartimgView
        android:id="@+id/movieImage"
        android:layout_margin="10dp"
          android:layout_width="69dp"
        android:layout_height="105dp" />

    <TextView
        android:id="@+id/movieName"
        android:text="电影名称"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/movieImage"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/movieImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <TextView
        android:id="@+id/directorLabel"
        android:text="导演"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/movieImage"
        android:layout_below="@+id/movieName"
        android:layout_alignLeft="@+id/movieName"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignBaseline="@+id/directorLabel"
        android:text="超超"
        android:gravity="center_horizontal"
        android:id="@+id/directorName"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/directorLabel"
        android:layout_alignTop="@+id/directorLabel"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/actorLabel"
        android:text="主演"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/directorLabel"
        android:layout_below="@+id/directorLabel"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/actor1"
        android:layout_alignBaseline="@+id/actorLabel"
        android:text="演员1"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/actorLabel"
        android:layout_toRightOf="@+id/actorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/actor2"
        android:layout_alignBaseline="@+id/actor1"
        android:text="演员2"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/actorLabel"
        android:layout_toRightOf="@+id/actor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sytime"
        android:text="@string/movie_time"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/movieImage"
        android:layout_below="@+id/actorLabel"
        android:layout_alignLeft="@+id/movieName"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/yeartime"
        android:layout_alignBaseline="@+id/sytime"
        android:text="上映"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/actorLabel"
        android:layout_toRightOf="@+id/sytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </RelativeLayout>
    <Button
        android:id="@+id/btnTop"
        android:layout_width="80dp"
        android:layout_height="128dp"
        android:background="#d9dee4"
        android:text="置顶"
        android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="80dp"
            android:layout_height="128dp"
            android:background="@color/red_ff4a57"
            android:text="删除"
            android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>