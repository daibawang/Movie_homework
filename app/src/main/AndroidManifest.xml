<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bcu.dai.movie_homework">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk
        android:targetSdkVersion="17"
        android:minSdkVersion="16"></uses-sdk>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MovieCollectionActivity" />
        <activity android:name=".Activity.action_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MovieDetailsActiyity" />
        <activity android:name=".Activity.Activity_Detail" />
        <activity android:name=".Activity.MovieVideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>